<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EDECEC"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/btn_backActivity"
        android:text="Back"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/gradient_button"
        app:backgroundTint="#078EFA"/>

    <androidx.cardview.widget.CardView
        android:layout_width="260dp"
        android:layout_height="290dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="140dp"
        app:cardCornerRadius="160dp">

            <ImageView
                android:id="@+id/imageSiswaShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/Btn_background1"
            android:background="@drawable/backgroudtextview"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginTop="480dp"
            android:layout_gravity="center_horizontal"
            app:shapeAppearanceOverlay="@style/RoundedSquare"/>


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/Btn_background2"
            android:background="@drawable/backgroudtextview"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginTop="570dp"
            android:layout_marginRight="120dp"
            android:layout_gravity="center_horizontal"
            app:shapeAppearanceOverlay="@style/RoundedSquare"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/Btn_background3"
            android:background="@drawable/backgroudtextview"
            android:layout_width="225dp"
            android:layout_height="80dp"
            android:layout_marginTop="570dp"
            android:layout_marginLeft="60dp"
            android:layout_gravity="center_horizontal"
            app:shapeAppearanceOverlay="@style/RoundedSquare"/>



            <TextView
                android:id="@+id/dataNamaSiswa"
                android:text="This Name"
                android:textSize="28dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/font_rubik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="502dp"
                android:layout_gravity="center_horizontal"
                />


            <TextView
                android:id="@+id/kelasSiswa"
                android:text="XII TKJ"
                android:textSize="23dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/font_exo2"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="595dp"
                android:layout_marginRight="120dp"
                android:layout_gravity="center_horizontal"
                />


            <TextView
                android:id="@+id/dataNISN_NIS"
                android:text="0051540115 / 8806"
                android:textSize="23dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/font_exo2"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="595dp"
                android:layout_marginLeft="60dp"
                android:layout_gravity="center_horizontal"
                />
    </FrameLayout>
</RelativeLayout>
