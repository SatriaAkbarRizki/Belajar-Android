<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animate_background"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:id="@+id/imagepeople_start"
        android:layout_width="280dp"
        android:layout_height="240dp"
        android:src="@drawable/imagepeople_one"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        />
    <ImageView
        android:id="@+id/imageApplication"
        android:layout_below="@id/imagepeople_start"
        android:layout_width="74dp"
        android:layout_height="85dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/peoplesearch" />


    <TextView
        android:id="@+id/tittlewelcome"
        android:textSize="34dp"
        android:text="@string/header_1"
        android:textColor="@color/white"
        android:fontFamily="@font/font_exo2"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageApplication"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:textSize="18dp"
        android:text="@string/Header_2"
        android:textColor="@color/white"
        android:fontFamily="@font/font_exo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageApplication"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"/>


    <ImageView
        android:id="@+id/imageSearchData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dataprofile"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="520dp"
        />

    <EditText
        android:id="@+id/inputSiswa"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="520dp"
        android:background="#E8E8E8"
        android:gravity="left"
        android:hint="Nama Siswa"
        android:inputType="textCapWords"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:text=""
        android:textColor="#786666"
        android:textColorHint="#616161" />

    <Button
        android:text="Check"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:background="@drawable/gradient_button"
        app:backgroundTint="#078EFA"
        android:textAppearance="@style/RoundedSquare"
        android:id="@+id/btn_checkData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputSiswa"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="18dp"
        />
</RelativeLayout>