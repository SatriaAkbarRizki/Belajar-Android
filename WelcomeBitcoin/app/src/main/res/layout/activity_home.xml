<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/imageBitcoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_gravity="bottom"
            android:src="@drawable/bitcoinhome"/>

        <ImageView
            android:layout_width="430dp"
            android:layout_height="570dp"
            android:layout_marginRight="100dp"
            android:layout_gravity="bottom"
            android:scaleType="centerCrop"
            android:src="@drawable/imagewelcome2"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/TextWelcom1"
            android:text="@string/hometext_1"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:textSize="28dp"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="100dp"
            android:layout_marginRight="40dp"
            />

        <Button
            android:id="@+id/Btn1_next"
            android:text="@string/buttontext_1"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="270dp"
            android:background="@drawable/rounded_button"
            app:backgroundTint="#11CCB9"
            />

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>